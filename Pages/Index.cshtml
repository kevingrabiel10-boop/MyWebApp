@page
@model CorazonesModel
@model MiProyecto.Pages.CorazonesModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Te quiero</title>

    <style>
        body {
            margin: 0;
            overflow: hidden;
            background: #ffe6f2;
            font-family: Arial, Helvetica, sans-serif;
        }

        .mensaje {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 60px;
            font-weight: bold;
            color: #d6006e;
            text-shadow: 2px 2px 5px white;
            z-index: 10;
            text-align: center;
        }

        .corazon {
            position: absolute;
            font-size: 40px;
            color: red;
            animation: mover 4s ease-in-out infinite alternate;
            opacity: 0.6;
        }

        @keyframes mover {
            from {
                transform: translateX(-50px);
            }
            to {
                transform: translateX(50px);
            }
        }
    </style>
</head>

<body>

    <div class="mensaje">
        Te quiero <br> Dara Alexa Reynoso Pfuño ❤️
    </div>

    @* Genera corazones desde C# *@
    @foreach (var heart in Model.Corazones)
    {
    <div class="corazon" style="top:@($"{heart.Top}%"); left:@($"{heart.Left}%");">
        ❤️
    </div>
    }

</body>
</html>
